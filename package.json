    "@types/sharp": "0.31.1",
    "changesets-changelog-clean": "1.2.1",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
